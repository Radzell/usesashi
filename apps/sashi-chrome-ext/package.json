{
  "name": "sachi-chrome-ext",
  "version": "0.1.0",
  "description": "Sachi Chrome Extension",
  "private": true,
  "scripts": {
    "source": "./src/sidepanel.html",

    "watch": "webpack --mode=development --watch --config config/webpack.config.js",
    "build": "webpack --mode=production --config config/webpack.config.js",
    "pack": "node pack.js",
    "repack": "npm run build && npm run pack",
    "format": "prettier --write --ignore-unknown \"{config,public,src}/**/*.{html,css,js,ts,json}\"",
    "prebuild": "yarn style && rm -rf ./public/dist",
    "prestart": "yarn style",
    "style": "npx tailwindcss -i ./src/input.css -o ./src/tailwindcss-output.css",
    "style:watch": "yarn style -- --watch",
    "start": "parcel --dist-dir ./public/dist"

  },
  "devDependencies": {
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.5",
    "@babel/preset-react": "^7.14.5",
    "@types/chrome": "^0.0.268",
    "@types/react": "^18.0.19",
    "@types/react-dom": "^18.0.6",
    "@types/webextension-polyfill": "^0.10.7",
    "babel-loader": "^9.1.3",
    "base64-image-loader": "^1.2.1",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.1",
    "eslint": "^7.29.0",
    "eslint-plugin-react": "^7.24.0",
    "mini-css-extract-plugin": "^2.9.0",
    "postcss": "^8.4.16",
    "postcss-nested": "^5.0.6",
    "process": "^0.11.10",
    "raw-loader": "^4.0.2",
    "tailwindcss": "^3.1.8",
    "ts-loader": "^9.5.1",
    "typescript": "^4.8.3",
    "webpack": "^5.91.0",
    "webpack-cli": "^5.1.4",
    "webpack-merge": "^5.8.0",
    "parcel": "latest"
  },
  "dependencies": {

    "classnames": "^2.5.1",
    "react": "^18.2.0",
    "react-app-polyfill": "^3.0.0",
    "react-dom": "^18.2.0",
    "react-frame-component": "^5.2.3",
    "webextension-polyfill": "^0.12.0"
  }
}
